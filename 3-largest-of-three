//Short version
public class LargestNumber {
    public static Integer findLargest(Integer a, Integer b, Integer c) {
        // Usamos la función Math.max para encontrar el mayor de tres números
        Integer largest = Math.max(a, Math.max(b, c));
        return largest;
    }
}

